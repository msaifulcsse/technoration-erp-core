    <!-- Content Row -->
    <div class="row">
        <!-- Academic Calendar -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Academic Calendar(With Events/Holidays)</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div id='academicCalendar'></div>
                </div>
            </div>
        </div>
        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Academic Students</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="studentCategoryPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Male
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Female
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> Disabled
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/demo/chart-pie-demo.js"></script>
    <script src="~/js/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/lib/jquery-calendar/full-calendar-5.7.2.js"></script>
    <script type="text/javascript">
        var today = new Date();
        var infoMessage = '@TempData["InfoMessage"]';
        var errorMessage = '@TempData["ErrorMessage"]';

        $(document).ready(function () {
            if (infoMessage != null && infoMessage != "") {
                Swal.fire({
                    //top-end/center/bottom-end
                    position: 'top-end', width: 400,
                    type: 'success',
                    text: infoMessage,
                    showConfirmButton: false,
                    timer: 5000
                });
            }
            if (errorMessage != null && errorMessage != "") {
                Swal.fire({
                    //top-end/center/bottom-end
                    position: 'top-end', width: 400,
                    type: 'error',
                    text: errorMessage,
                    showConfirmButton: false,
                    timer: 5000
                });
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            var calendarElem = document.getElementById('academicCalendar');
            var academicCalendar = new FullCalendar.Calendar(calendarElem, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                timeZone: 'local',
                initialDate: new Date(today.getFullYear(), today.getMonth(), today.getDate()),
                //initialDate: '2020-09-12',
                navLinks: true, // can click day/week names to navigate views
                nowIndicator: true,
                selectable: true,
                selectMirror: true,
                select: function (arg) {
                    var title = prompt('Event Title:');
                    if (title) {
                        academicCalendar.addEvent({
                            title: title,
                            start: arg.start,
                            end: arg.end,
                            allDay: arg.allDay
                        })
                    }
                    academicCalendar.unselect()
                },
                weekNumbers: true,
                weekNumberCalculation: 'ISO',
                editable: true,
                dayMaxEvents: true, // allow "more" link when too many events
                //events: [
                //    {
                //        title: 'All Day Event',
                //        start: '2020-09-01'
                //    },
                //    {
                //        title: 'Long Event',
                //        start: '2020-09-07',
                //        end: '2020-09-10'
                //    },
                //    {
                //        groupId: 999,
                //        title: 'Repeating Event',
                //        start: '2020-09-09T16:00:00'
                //    },
                //    {
                //        groupId: 999,
                //        title: 'Repeating Event',
                //        start: '2020-09-16T16:00:00'
                //    },
                //    {
                //        title: 'Conference',
                //        start: '2020-09-11',
                //        end: '2020-09-13'
                //    },
                //    {
                //        title: 'Meeting',
                //        start: '2020-09-12T10:30:00',
                //        end: '2020-09-12T12:30:00'
                //    },
                //    {
                //        title: 'Lunch',
                //        start: '2020-09-12T12:00:00'
                //    },
                //    {
                //        title: 'Meeting',
                //        start: '2020-09-12T14:30:00'
                //    },
                //    {
                //        title: 'Happy Hour',
                //        start: '2020-09-12T17:30:00'
                //    },
                //    {
                //        title: 'Dinner',
                //        start: '2020-09-12T20:00:00'
                //    },
                //    {
                //        title: 'Birthday Party',
                //        start: '2020-09-13T07:00:00'
                //    },
                //    {
                //        title: 'Click for Google',
                //        url: 'http://google.com/',
                //        start: '2020-09-28'
                //    }
                //],
                // http://fullcalendar.io/docs/google_calendar/
                googleCalendarApiKey: 'AIzaSyDcnW6WejpTOCffshGDDb4neIrXVUA1EAE',
                // US Holidays
                events: 'en.usa#holiday@group.v.calendar.google.com',
                eventClick: function (arg) {
                    // opens events in a popup window
                    window.open(arg.event.url, 'google-calendar-event', 'width=700,height=600');
                    arg.jsEvent.preventDefault() // don't navigate in main tab
                },
                //eventClick: function (arg) {
                //    if (confirm('Are you sure you want to delete this event?')) {
